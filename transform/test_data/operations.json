{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "caseSplit": {
      "type": "array",
      "items": {
        "type": "string",
        "transform": {
          "cumulo": {
            "from": [
              {
                "jsonPath": "@"
              }
            ]
          }
        }
      },
      "transform": {
        "cumulo": {
          "from": [
            {
              "jsonPath": "$.mixedCase",
              "operations": [
                {
                  "type": "changeCase",
                  "args": {
                    "to": "lower"
                  }
                },
                {
                  "type": "split",
                  "args": {
                    "on": "|"
                  }
                }
              ]
            }
          ]
        }
      }
    },
    "contributor": {
      "type": "string",
      "transform": {
        "cumulo": {
          "from": [
            {
              "jsonPath": "$.data.contributors[*]",
              "operations": [
                {
                  "type": "max",
                  "args": {
                    "by": "@.id",
                    "return": "@.fullname"
                  }
                }
              ]
            }
          ]
        }
      }
    },
    "url": {
      "type": "string",
      "transform": {
        "cumulo": {
          "from": [
            {
              "jsonPath": "$.url",
              "operations": [
                {
                  "type": "replace",
                  "args": {
                    "regex": "foo\\.com",
                    "new": "gannettdigital.com"
                  }
                }
              ]
            }
          ]
        }
      }
    },
    "valid": {
      "type": "boolean",
      "transform": {
        "cumulo": {
          "from": [
            {
              "jsonPath": "$.invalid",
              "operations": [
                {
                  "type": "inverse"
                }
              ]
            }
          ]
        }
      }
    },
    "duration": {
      "type": "number",
      "transform": {
        "cumulo": {
          "from": [
            {
              "jsonPath": "$.data.attributes[?(@.name==\"length\")].value",
              "operations": [
                {
                  "type": "duration"
                }
              ]
            }
          ]
        }
      }
    },
    "startTime": {
      "type": "string",
      "transform": {
        "cumulo": {
          "from": [
            {
              "jsonPath": "$.startTime",
              "operations": [
                {
                  "type": "timeParse",
                  "args": {
                    "format": "2006-01-02T15:04:05Z07:00",
                    "layout": "03:04"
                  }
                }
              ]
            }
          ]
        }
      }
    },
    "lastModified": {
      "type": "string",
      "transform": {
        "cumulo": {
          "from": [
            {
              "jsonPath": "$.lastModified",
              "operations": [
                {
                  "type": "currentTime",
                  "args": {
                    "format": "2006-01-02T15:04:05Z07:00"
                  }
                }
              ]
            }
          ]
        }
      }
    },
    "toCamelCase": {
      "type": "string",
      "transform": {
        "cumulo": {
          "from": [
            {
              "jsonPath": "$.toCamelCase",
              "operations": [
                {
                  "type": "toCamelCase",
                  "args": {
                    "delimiter": "-"
                  }
                }
              ]
            }
          ]
        }
      }
    }
  }
}