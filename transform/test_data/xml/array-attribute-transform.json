{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "stats": {
      "type": "array",
      "transform": {
        "sport": {
          "from": [
            {
              "xmlPath": "//stat-group/stat[contains(@type,'runs_inning')]"
            }
          ]
        }
      },
      "items": {
        "type": "object",
        "properties": {
          "num": {
            "type": "string",
            "transform": {
              "sport": {
                "from": [
                  {
                    "xmlPath": "@num"
                  }
                ]
              }
            }
          }
        }
      }
    }
  }
}