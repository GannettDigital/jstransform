{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "heading": {
      "type": "string",
      "transform": {
        "html": {
          "from": [
            {
              "jsonPath": "$.heading"
            }
          ]
        }
      }
    },
    "body": {
      "type": "string",
      "transform": {
        "html": {
          "from": [
            {
              "jsonPath": "$.body"
            }
          ]
        }
      }
    }
  },
  "required": [
    "heading",
    "body"
  ]
}
