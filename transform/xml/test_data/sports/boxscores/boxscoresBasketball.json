{
  "$schema": "http://json-schema.org/draft-04/schema#/",
  "type": "object",
  "properties": {
    "league": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "transform": {
            "sport": {
              "from": [
                {
                  "xmlPath": "//league-content/league/id"
                }
              ]
            }
          }
        },
        "name": {
          "type": "string",
          "transform": {
            "sport": {
              "from": [
                {
                  "xmlPath": "//league-content/league/name"
                }
              ]
            }
          }
        },
        "nickName": {
          "type": "string",
          "transform": {
            "sport": {
              "from": [
                {
                  "xmlPath": "//league-content/league/name[@type='nick']"
                }
              ]
            }
          }
        }
      }
    },
    "season": {
      "type": "object",
      "properties": {
        "id":{
          "type": "string",
          "transform": {
            "sport": {
              "from": [
                {
                  "xmlPath": "//season/id"
                }
              ]
            }
          }
        }
      }
    },
    "qaStatus": {
      "type": "string",
      "transform": {
        "sport": {
          "from": [
            {
              "xmlPath": "//competition/meta/property"
            }
          ]
        }
      }
    },
    "id": {
      "type": "string",
      "transform": {
        "sport": {
          "from": [
            {
              "xmlPath": "//competition/id"
            }
          ]
        }
      }
    },
    "startDate": {
      "type": "string",
      "transform": {
        "sport": {
          "from": [
            {
              "xmlPath": "//competition/start-date"
            }
          ]
        }
      }
    },
    "competitionStatus": {
      "type": "string",
      "transform": {
        "sport": {
          "from": [
            {
              "xmlPath": "//result-scope/competition-status"
            }
          ]
        }
      }
    },
    "scopeNum": {
      "type": "integer",
      "transform": {
        "sport": {
          "from": [
            {
              "xmlPath": "//result-scope/scope/@num"
            }
          ]
        }
      }
    },
    "scopeType": {
      "type": "string",
      "transform": {
        "sport": {
          "from": [
            {
              "xmlPath": "//result-scope/scope/@type"
            }
          ]
        }
      }
    },
    "scopeStatus": {
      "type": "string",
      "transform": {
        "sport": {
          "from": [
            {
              "xmlPath": "//result-scope/scope-status"
            }
          ]
        }
      }
    },
    "completedDate": {
      "type": "string",
      "transform": {
        "sport": {
          "from": [
            {
              "xmlPath": "//result-scope/completed-date"
            }
          ]
        }
      }
    },
    "home": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "transform": {
            "sport": {
              "from": [
                {
                  "xmlPath": "//home-team-content/team/id"
                }
              ]
            }
          }
        },
        "name": {
          "type": "string",
          "transform": {
            "sport": {
              "from": [
                {
                  "xmlPath": "//home-team-content/team/name"
                }
              ]
            }
          }
        },
        "stats": {
          "type": "array",
          "transform": {
            "sport": {
              "from": [
                {
                  "xmlPath": "//home-team-content/stat-group"
                }
              ]
            }
          },
          "items": {
            "type": "object",
            "properties": {
              "key": {
                "type": "string",
                "transform": {
                  "sport": {
                    "from": [
                      {
                        "xmlPath": "key"
                      }
                    ]
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
