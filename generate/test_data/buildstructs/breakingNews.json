{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "type": {
            "type": "string",
            "enum": [
                "breakingnewsmobile",
                "breakingnewssms",
                "breakingnewsweb",
                "bn:urbanairship",
                "bn:parent"
            ],
            "transform": {
                "cumulo": {
                    "from": [
                        {
                            "jsonPath": "$.data.type"
                        }
                    ]
                }
            }
        },
        "fullText": {
            "type": "string",
            "transform": {
                "cumulo": {
                    "from": [
                        {
                            "jsonPath": "$.data.body"
                        }
                    ]
                }
            }
        },
        "body": {
            "type": "object",
            "properties": {
                "mobile": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "type": {
                                "type": "string",
                                "enum": [
                                    "asset",
                                    "text"
                                ],
                                "default": "text",
                                "transform": {
                                    "cumulo": {
                                        "from": [
                                            {
                                                "jsonPath": "@.type"
                                            }
                                        ]
                                    },
                                    "presentationv4": {
                                        "from": [
                                            {
                                                "jsonPath": "@.type"
                                            }
                                        ]
                                    }
                                }
                            },
                            "value": {
                                "type": "string",
                                "transform": {
                                    "cumulo": {
                                        "from": [
                                            {
                                                "jsonPath": "@.value"
                                            }
                                        ]
                                    },
                                    "presentationv4": {
                                        "from": [
                                            {
                                                "jsonPath": "@.value"
                                            }
                                        ]
                                    }
                                }
                            }
                        },
                        "required": [
                            "type",
                            "value"
                        ]
                    },
                    "transform": {
                        "cumulo": {
                            "from": [
                                {
                                    "jsonPath": "$.data.mobileBody[*]"
                                }
                            ]
                        },
                        "presentationv4": {
                            "from": [
                                {
                                    "jsonPath": "$.mobileBody[*]"
                                }
                            ]
                        }
                    }
                },
                "desktop": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "type": {
                                "type": "string",
                                "enum": [
                                    "asset",
                                    "text"
                                ],
                                "default": "text",
                                "transform": {
                                    "cumulo": {
                                        "from": [
                                            {
                                                "jsonPath": "@.type"
                                            }
                                        ]
                                    },
                                    "presentationv4": {
                                        "from": [
                                            {
                                                "jsonPath": "@.type"
                                            }
                                        ]
                                    }
                                }
                            },
                            "value": {
                                "type": "string",
                                "transform": {
                                    "cumulo": {
                                        "from": [
                                            {
                                                "jsonPath": "@.value"
                                            }
                                        ]
                                    },
                                    "presentationv4": {
                                        "from": [
                                            {
                                                "jsonPath": "@.value"
                                            }
                                        ]
                                    }
                                }
                            }
                        },
                        "required": [
                            "type",
                            "value"
                        ]
                    },
                    "transform": {
                        "cumulo": {
                            "from": [
                                {
                                    "jsonPath": "$.data.desktopBody[*]"
                                }
                            ]
                        },
                        "presentationv4": {
                            "from": [
                                {
                                    "jsonPath": "$.desktopBody[*]"
                                }
                            ]
                        }
                    }
                }
            },
            "required": [
                "mobile",
                "desktop"
            ]
        },
        "layoutPriorityAssetId": {
            "type": "string",
            "transform": {
                "cumulo": {
                    "from": [
                        {
                            "jsonPath": "$.data.layoutPriorityAssetId"
                        }
                    ]
                }
            }
        },
        "associatedAssetId": {
            "type": "string",
            "transform": {
                "cumulo": {
                    "from": [
                        {
                            "jsonPath": "$.data.attributes[?(@.name==\"associatedassetid\")].value"
                        }
                    ]
                },
                "presentationv4": {
                    "from": [
                        {
                            "jsonPath": "$.associatedAssetId"
                        },
                        {
                            "jsonPath": "$._attributes.AssociatedAssetId"
                        },
                        {
                            "jsonPath": "$._attributes.associatedassetid"
                        }
                    ]
                }
            }
        },
        "developing": {
            "type": "boolean",
            "transform": {
                "cumulo": {
                    "from": [
                        {
                            "jsonPath": "$.data.attributes[?(@.name==\"itemvardevelopingstory\")].value"
                        }
                    ]
                },
                "presentationv4": {
                    "from": [
                        {
                            "jsonPath": "$.developing"
                        },
                        {
                            "jsonPath": "$._attributes.developing"
                        }
                    ]
                }
            }
        }
    },
    "required": [
        "type",
        "fullText",
        "body",
        "layoutPriorityAssetId",
        "developing"
    ]
}
