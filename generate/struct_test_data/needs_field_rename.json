{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "type": {
            "description": "a type",
            "type": "string",
            "enum": [
                "image"
            ],
            "transform": {
                "cumulo": {
                    "from": [
                        {
                            "jsonPath": "$.data.type"
                        }
                    ]
                }
            }
        },
        "crops": {
            "type": "object",
            "description": "Crops",
            "additionalProperties": false,
            "properties": {
                "1_1": {
                    "type": "object",
                    "description": "1:1 ratio",
                    "additionalProperties": false,
                    "properties": {
                        "x": {
                            "type": "integer",
                            "description": "Height",
                            "examples": [50]
                        },
                        "y": {
                            "type": "integer",
                            "description": "Width",
                            "examples": [50]
                        },
                        "height": {
                            "type": "integer",
                            "description": "Height",
                            "examples": [100]
                        },
                        "width": {
                            "type": "integer",
                            "description": "Width",
                            "examples": [100]
                        },
                        "path": {
                            "type": "string",
                            "format": "uri",
                            "description": "Full URL to the 1:1 ratio image",
                            "examples": ["https://www.usatoday.com/test"]
                        },
                        "relativePath": {
                            "type": "string",
                            "format": "uri-reference",
                            "description": "Relative Path of a 1:1 ratio image",
                            "examples": ["/presto/stage/2019/02/04/USAT/test"]
                        }
                    }
                },
                "3_4": {
                    "type": "object",
                    "description": "3:4 ratio",
                    "additionalProperties": false,
                    "properties": {
                        "x": {
                            "type": "integer",
                            "description": "Height",
                            "examples": [50],
                            "minlength": 0
                        },
                        "y": {
                            "type": "integer",
                            "description": "Width",
                            "examples": [50],
                            "minlength": 0
                        },
                        "height": {
                            "type": "integer",
                            "description": "Height",
                            "examples": [100],
                            "minlength": 1
                        },
                        "width": {
                            "type": "integer",
                            "description": "Width",
                            "examples": [100],
                            "minlength": 1
                        },
                        "path": {
                            "type": "string",
                            "format": "uri",
                            "description": "Full URL to the 3:4 ratio image",
                            "examples": ["https://www.usatoday.com/test"]
                        },
                        "relativePath": {
                            "type": "string",
                            "format": "uri-reference",
                            "description": "Relative Path of a 3:4 ratio image",
                            "examples": ["/presto/stage/2019/02/04/USAT/test"]
                        }
                    }
                },
                "4_3": {
                    "type": "object",
                    "description": "4:3 ratio",
                    "additionalProperties": false,
                    "properties": {
                        "x": {
                            "type": "integer",
                            "description": "Height",
                            "examples": [50]
                        },
                        "y": {
                            "type": "integer",
                            "description": "Width",
                            "examples": [50]
                        },
                        "height": {
                            "type": "integer",
                            "description": "Height",
                            "examples": [100]
                        },
                        "width": {
                            "type": "integer",
                            "description": "Width",
                            "examples": [100]
                        },
                        "path": {
                            "type": "string",
                            "format": "uri",
                            "description": "Full URL to the 4:3 ratio image",
                            "examples": ["https://www.usatoday.com/test"]
                        },
                        "relativePath": {
                            "type": "string",
                            "format": "uri-reference",
                            "description": "Relative Path of a 4:3 ratio image",
                            "examples": ["/presto/stage/2019/02/04/USAT/test"]
                        }
                    }
                },
                "16_9": {
                    "type": "object",
                    "description": "16:9 ratio",
                    "additionalProperties": false,
                    "properties": {
                        "x": {
                            "type": "integer",
                            "description": "Height",
                            "examples": [50]
                        },
                        "y": {
                            "type": "integer",
                            "description": "Width",
                            "examples": [50]
                        },
                        "height": {
                            "type": "integer",
                            "description": "Height",
                            "examples": [100]
                        },
                        "width": {
                            "type": "integer",
                            "description": "Width",
                            "examples": [100]
                        },
                        "path": {
                            "type": "string",
                            "format": "uri",
                            "description": "Full URL to the 16:9 ratio image",
                            "examples": ["https://www.usatoday.com/test"]
                        },
                        "relativePath": {
                            "type": "string",
                            "format": "uri-reference",
                            "description": "Relative Path of a 16:9 ratio image",
                            "examples": ["/presto/stage/2019/02/04/USAT/something"]
                        }
                    }
                },
                "9_16": {
                    "type": "object",
                    "description": "9:16 ratio",
                    "additionalProperties": false,
                    "properties": {
                        "x": {
                            "type": "integer",
                            "description": "Height",
                            "examples": [50]
                        },
                        "y": {
                            "type": "integer",
                            "description": "Width",
                            "examples": [50]
                        },
                        "height": {
                            "type": "integer",
                            "description": "Height",
                            "examples": [100]
                        },
                        "width": {
                            "type": "integer",
                            "description": "Width",
                            "examples": [100]
                        },
                        "path": {
                            "type": "string",
                            "format": "uri",
                            "description": "Full URL to the 9:16 ratio image",
                            "examples": ["https://www.usatoday.com/test"]
                        },
                        "relativePath": {
                            "type": "string",
                            "format": "uri-reference",
                            "description": "Relative Path of a 9:16 ratio image",
                            "examples": ["/presto/stage/2019/02/04/USAT/test"]
                        }
                    }
                },
                "bestCrop": {
                    "type": "object",
                    "description": "Best Crop",
                    "additionalProperties": false,
                    "properties": {
                        "x": {
                            "type": "integer",
                            "description": "Height",
                            "examples": [50]
                        },
                        "y": {
                            "type": "integer",
                            "description": "Width",
                            "examples": [50]
                        },
                        "height": {
                            "type": "integer",
                            "description": "Height",
                            "examples": [100]
                        },
                        "width": {
                            "type": "integer",
                            "description": "Width",
                            "examples": [100]
                        },
                        "path": {
                            "type": "string",
                            "format": "uri",
                            "description": "Full URL to the best crop image",
                            "examples": ["https://www.usatoday.com/test"]
                        },
                        "relativePath": {
                            "type": "string",
                            "format": "uri-reference",
                            "description": "Relative Path of a best crop image",
                            "examples": ["/presto/stage/2019/02/04/USAT/test"]
                        }
                    }
                }
            }
        },
        "orientation": {
            "type": "string",
            "transform": {
                "cumulo": {
                    "from": [
                        {
                            "jsonPath": "$.data.attributes[?(@.name==\"orientation\")].value"
                        }
                    ]
                }
            }
        },
        "credit": {
            "type": "string",
            "transform": {
                "cumulo": {
                    "from": [
                        {
                            "jsonPath": "$.data.attributes[?(@.name==\"credit\")].value"
                        }
                    ]
                }
            }
        },
        "cutline": {
            "type": "string",
            "transform": {
                "cumulo": {
                    "from": [
                        {
                            "jsonPath": "$.data.attributes[?(@.name==\"cutline\")].value"
                        }
                    ]
                }
            }
        },
        "URL": {
            "type": "object",
            "properties": {
                "publish": {
                    "type": "string",
                    "transform": {
                        "cumulo": {
                            "from": [
                                {
                                    "jsonPath": "$.data.attributes[?(@.name==\"publishurl\")].value"
                                }
                            ]
                        },
                        "presentationv4": {
                            "from": [
                                {
                                    "jsonPath": "$.URL.publish"
                                },
                                {
                                    "jsonPath": "$.publishUrl"
                                }
                            ]
                        }
                    }
                },
                "absolute": {
                    "type": "string",
                    "transform": {
                        "cumulo": {
                            "from": [
                                {
                                    "jsonPath": "$.data.attributes[?(@.name==\"publishurl\")].value"
                                },
                                {
                                    "jsonPath": "$.data.attributes[?(@.name==\"rootpath\")].value"
                                },
                                {
                                    "jsonPath": "$.data.attributes[?(@.name==\"basename\")].value"
                                }
                            ],
                            "method": "concatenate"
                        },
                        "presentationv4": {
                            "from": [
                                {
                                    "jsonPath": "$.URL.absolute"
                                },
                                {
                                    "jsonPath": "$.absoluteUrl"
                                }
                            ]
                        }
                    }
                }
            },
            "required": [
                "publish",
                "absolute"
            ]
        },
        "caption": {
            "type": "string"
        },
        "originalSize": {
            "type": "object",
            "properties": {
                "height": {
                    "type": "number",
                    "transform": {
                        "cumulo": {
                            "from": [
                                {
                                    "jsonPath": "$.data.attributes[?(@.name==\"oimageheight\")].value"
                                }
                            ]
                        },
                        "presentationv4": {
                            "from": [
                                {
                                    "jsonPath": "$.originalSize.height"
                                },
                                {
                                    "jsonPath": "$.originalHeight"
                                }
                            ]
                        }
                    }
                },
                "width": {
                    "type": "number",
                    "transform": {
                        "cumulo": {
                            "from": [
                                {
                                    "jsonPath": "$.data.attributes[?(@.name==\"oimagewidth\")].value"
                                }
                            ]
                        },
                        "presentationv4": {
                            "from": [
                                {
                                    "jsonPath": "$.originalSize.width"
                                },
                                {
                                    "jsonPath": "$.originalWidth"
                                }
                            ]
                        }
                    }
                }
            },
            "required": [
                "height",
                "width"
            ]
        },
        "datePhotoTaken": {
            "type": "string",
            "transform": {
                "cumulo": {
                    "from": [
                        {
                            "jsonPath": "$.data.attributes[?(@.name==\"datephototaken\")].value"
                        }
                    ]
                }
            }
        }
    },
    "required": [
        "type",
        "crops",
        "orientation",
        "credit",
        "URL",
        "caption",
        "originalSize",
        "datePhotoTaken"
    ]
}